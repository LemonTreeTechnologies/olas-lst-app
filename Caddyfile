lstolas.xyz, www.lstolas.xyz {
  encode zstd gzip

  log {
    output stdout
    format console
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "no-referrer-when-downgrade"
    Content-Security-Policy "default-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'; navigate-to 'self' blob:; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline' https:; script-src 'self' 'unsafe-inline' https: blob:; connect-src 'self' wss: https://*.walletconnect.org https://api.web3modal.org https://api.studio.thegraph.com; font-src 'self' data: https:; worker-src 'self' blob:; media-src 'self' blob:"
  }

  @static {
    path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.webp *.ico *.woff *.woff2
  }
  header @static Cache-Control "public, max-age=31536000, immutable"

  reverse_proxy webapp:3000 {
    transport http {
      keepalive 30s
    }
  }
}

